{% block content %}

<article class="speaker">
	<div class="speaker-content">
		<header>
			<h1>{{item.presenter_name}}</h1>
			<h2>{{item.conference_name}}</h2>
		</header>
		<div class="speaker-text">
			{% if item.conference_resume %}
			{{ item.conference_resume|markdown }}
			{%endif%}

			<h3>Questions centrales</h3>			
			{% if item.conference_goals %}
			{{ item.conference_goals|markdown }}
			{%endif%}
			
